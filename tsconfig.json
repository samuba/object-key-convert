{
  "compilerOptions": {
    "target": "ES2015",
    "useDefineForClassFields": true,
    "module": "ES2015",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false, // used in tests.ts
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true
  },
  "include": ["./src"]
}
